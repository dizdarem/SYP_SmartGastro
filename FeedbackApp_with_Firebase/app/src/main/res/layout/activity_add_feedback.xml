<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="39dp"
        android:text="Neues Feedback abgeben!"
        android:textAlignment="center"
        android:textColor="#00BCD4"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_opinion"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="77dp"
        android:text="Ihre Meinung:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="349dp"
        android:text="Sterne:"
        android:textAlignment="viewStart"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinner_rate"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="347dp"
        android:layout_marginEnd="39dp" />

    <Button
        android:id="@+id/btn_sendFeedback"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_opinion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="123dp"
        android:backgroundTint="#00BCD4"
        android:text="Send Feedback"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/input_opinion"
        android:layout_width="338dp"
        android:layout_height="209dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/frame"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

</RelativeLayout>
